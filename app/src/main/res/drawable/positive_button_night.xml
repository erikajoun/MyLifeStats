<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@color/colorPositiveButtonPressedNight"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/webColorNight"/>
                    <padding
                        android:left="8dp"
                        android:right="8dp"
                        android:top="0dp"
                        android:bottom="0dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <!--<gradient
                        android:angle="90"
                        android:endColor="@color/colorPrimary"
                        android:centerColor="@color/colorWhite"
                        android:startColor="@color/colorWhite" />-->
                    <solid android:color="@color/colorPositiveButtonNight"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/webColorNight"/>
                    <padding
                        android:left="8dp"
                        android:right="8dp"
                        android:top="0dp"
                        android:bottom="0dp"/>
                </shape>
            </item>
            <item>
                <color android:color="@color/colorPrimary"/>
            </item>
        </selector>
    </item>
</selector>